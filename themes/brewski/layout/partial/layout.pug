doctype
html(lang=config.language)
    head
        include head.pug
    body
        .wrap
            header
                h1.branding
                    a(href=url_for(), title=config.title)
                        if theme.logo
                            img.logo-image(src=url_for(theme.logo), alt='logo')
                        else
                            = config.title
                include nav.pug
            main.container
                div.post-content
                    blockquote
                        | The Great Americana Banana Split Celebration is August 23-25, 2019 in Downtown Latrobe,&nbsp;PA &mdash;
                        | where the banana split was invented 115 years ago!
                block container
            footer
                block pagination
                block copyright
        include scripts.pug
